<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/featureLayout"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardBackgroundColor="@color/primaryColor"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:padding="5dp"
                android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtFeatureName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bhojanshala"
                    android:layout_gravity="center_vertical"
                    style="@style/HeaderText"
                    android:layout_weight="7"
                    />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:weightSum="10">


                    <androidx.appcompat.widget.AppCompatRatingBar
                        style="@style/NormalRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:backgroundTint="@color/primaryTextColor"

                        ></androidx.appcompat.widget.AppCompatRatingBar>
                </LinearLayout>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:minHeight="40dp"


            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtFeatureDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this is feature description"

                style="@style/NormalLable"
                android:textFontWeight="33"
                />
        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>
</LinearLayout>
