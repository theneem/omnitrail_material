<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkColor"
    tools:context=".ui.saintdetail.SaintDetailFragment">



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabImageGallary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginStart="20dp"
        app:fabSize="mini"
        android:contentDescription="Hello"
        android:backgroundTint="@color/colorWhite"
        app:srcCompat="@drawable/ic_image_gallary"

        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="@dimen/_5sdp"
        app:fabSize="mini"
        android:contentDescription="Hello"
        android:backgroundTint="@color/colorWhite"
        app:srcCompat="@drawable/ic_share"

        />



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabWiki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginEnd="20dp"
        app:fabSize="mini"

        android:contentDescription="Hello"
        android:backgroundTint="@color/colorWhite"
        app:srcCompat="@drawable/ic_wiki"

        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"

            android:outlineAmbientShadowColor="@color/primaryDarkColor"
            android:padding="10dp"
            app:cardBackgroundColor="@color/primaryColor"

            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
android:layout_marginTop="@dimen/_35sdp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/txtSaintDetailName"
                            style="@style/HeaderText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="10dp"

                            android:layout_weight="3"
                            android:text="Contact Person - Number" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            app:srcCompat="@drawable/ic_account_circle_white_24dp"></ImageView>

                        <TextView
                            android:id="@+id/txtContactPerson"
                            style="@style/NormalText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="10dp"

                            android:layout_weight="3"
                            android:text="Contact Person - Number" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            app:srcCompat="@drawable/ic_event"></ImageView>

                        <TextView
                            android:id="@+id/txtLifeSpan"
                            style="@style/NormalText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="10dp"

                            android:layout_weight="3"
                            android:text="Contact Person - Number" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorWhite" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:background="@color/colorWhite"
                            android:orientation="horizontal"
                            android:paddingStart="0dp">


                            <TextView
                                style="@style/NormalLable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"

                                android:layout_weight="60"
                                android:padding="5dp"
                                android:text="Sect :  " />


                            <TextView
                                android:id="@+id/txtSect"
                                style="@style/NormalText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"

                                android:layout_weight="40"
                                android:background="@drawable/back"

                                android:padding="5dp"

                                android:text="Setamber" />


                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:orientation="horizontal"
                        android:padding="10dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:background="@color/colorWhite"
                            android:orientation="horizontal"
                            android:padding="0dp">

                            <TextView
                                style="@style/NormalLable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_weight="60"
                                android:padding="5dp"
                                android:text="Samudai : " />


                            <TextView
                                android:id="@+id/txtSamudai"
                                style="@style/NormalText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_gravity="start"
                                android:layout_weight="40"
                                android:background="@drawable/back"
                                android:padding="5dp"
                                android:text="Samudai" />
                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:background="@color/colorWhite"
                            android:orientation="horizontal"
                            android:padding="0dp">


                            <TextView
                                style="@style/NormalLable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_weight="60"
                                android:padding="5dp"
                                android:text="Guru :" />


                            <TextView
                                android:id="@+id/txtParentSaint"
                                style="@style/NormalText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"


                                android:layout_gravity="start"
                                android:layout_weight="40"
                                android:background="@drawable/back"
                                android:padding="5dp"
                                android:text="Guru" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:background="@color/colorWhite"
                            android:orientation="horizontal"
                            android:padding="0dp">

                            <TextView
                                style="@style/NormalLable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_weight="60"
                                android:padding="5dp"
                                android:text="Saint Date :" />


                            <TextView
                                android:id="@+id/txtSaintDate"
                                style="@style/NormalText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"

                                android:layout_weight="40"
                                android:background="@drawable/back"
                                android:padding="5dp"
                                android:text="SintDate" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:background="@color/colorWhite"
                            android:orientation="horizontal"
                            android:padding="0dp">

                            <TextView
                                style="@style/NormalLable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_weight="60"
                                android:padding="5dp"
                                android:text="Address:" />


                            <TextView
                                android:id="@+id/txtFullAddress"
                                style="@style/NormalText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"

                                android:layout_weight="40"
                                android:background="@drawable/back"
                                android:padding="5dp"
                                android:text="Full Address" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:orientation="horizontal"
                        android:padding="10dp">


                        <TextView
                            android:id="@+id/txtSaintStory"
                            style="@style/NormalLable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:padding="5dp"
                            android:text="Saint Story" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnWikiLink"
                            style="@style/ButtonMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Wikipedia"
                            android:textAllCaps="false"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPhotos"
                            style="@style/ButtonMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:padding="10dp"
                            android:text="Photos"
                            android:textAllCaps="false" />

                        <com.facebook.share.widget.ShareButton
                            android:id="@+id/share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </ScrollView>


</FrameLayout>