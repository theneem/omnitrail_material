<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.templedetail.TempleDetailFragment">



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabImageGallary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginStart="20dp"
            app:fabSize="mini"
            android:contentDescription="Hello"
            android:backgroundTint="@color/colorWhite"
            app:srcCompat="@drawable/ic_image_gallary"

            />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="@dimen/_5sdp"
            app:fabSize="mini"
            android:contentDescription="Hello"
            android:backgroundTint="@color/colorWhite"
            app:srcCompat="@drawable/ic_share"

            />



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabWiki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginEnd="20dp"
            app:fabSize="mini"

            android:contentDescription="Hello"
            android:backgroundTint="@color/colorWhite"
            app:srcCompat="@drawable/ic_wiki"

            />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"

            android:outlineAmbientShadowColor="@color/primaryDarkColor"
            android:padding="10dp"
            app:cardBackgroundColor="@color/primaryColor"

            app:cardCornerRadius="25dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_35sdp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            app:srcCompat="@drawable/ic_home_white_24dp" />


                        <TextView
                            android:id="@+id/txtFullAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="3"
                            android:text="Locatin"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/primaryTextColor" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            app:srcCompat="@drawable/ic_account_circle_white_24dp"></ImageView>

                        <TextView
                            android:id="@+id/txtContactPerson"
                            style="@style/NormalText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="10dp"

                            android:layout_weight="3"
                            android:text="Contact Person - Number" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/primaryTextColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:background="@color/colorWhite"
                            android:orientation="horizontal"
                            android:padding="0dp">


                            <TextView
                                style="@style/NormalLable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"

                                android:layout_weight="60"
                                android:padding="5dp"
                                android:text="Primary Deity :  " />


                            <TextView
                                android:id="@+id/txtPrimaryDeity"
                                style="@style/NormalText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"

                                android:layout_weight="40"
                                android:background="@drawable/back"

                                android:padding="5dp"
                                android:text="Primary Deity"
                                android:textAppearance="?android:attr/textAppearanceMedium" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:background="@color/colorWhite"
                            android:orientation="horizontal"
                            android:padding="0dp">

                            <TextView
                                style="@style/NormalLable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_weight="60"
                                android:padding="5dp"
                                android:text="Governing Body : " />


                            <TextView
                                android:id="@+id/txtGoverningBody"
                                style="@style/NormalText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_weight="40"
                                android:background="@drawable/back"
                                android:padding="5dp"
                                android:text="Governing Body" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:background="@color/colorWhite"
                            android:orientation="horizontal"
                            android:padding="0dp">


                            <TextView
                                style="@style/NormalLable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_weight="60"
                                android:padding="5dp"
                                android:text="Creator :" />


                            <TextView
                                android:id="@+id/txtCreator"
                                style="@style/NormalText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_gravity="start"
                                android:layout_weight="40"
                                android:background="@drawable/back"
                                android:padding="5dp"
                                android:text="Creator" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:background="@color/colorWhite"
                            android:orientation="horizontal"
                            android:padding="0dp">

                            <TextView
                                style="@style/NormalLable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_weight="60"
                                android:padding="5dp"
                                android:text="Completion :" />


                            <TextView
                                android:id="@+id/txtCompletionPeriod"
                                style="@style/NormalText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_weight="40"
                                android:background="@drawable/back"
                                android:padding="5dp"
                                android:text="Completion" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:background="@color/colorWhite"
                            android:orientation="horizontal"
                            android:padding="0dp">

                            <TextView
                                style="@style/NormalLable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_weight="60"
                                android:padding="5dp"
                                android:text="Address:" />


                            <TextView
                                android:id="@+id/txtFullAddress1"
                                style="@style/NormalText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_weight="40"
                                android:background="@drawable/back"
                                android:padding="5dp"
                                android:text="Full Address" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:orientation="vertical"
                        android:padding="10dp">


                        <TextView
                            android:id="@+id/txtTempleStory"
                            style="@style/NormalLable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:padding="5dp"
                            android:text="Temple Story" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnWikiLink"
                            style="@style/ButtonMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:padding="10dp"
                            android:text="Wikipedia"
                            android:textAllCaps="false" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPhotos"
                            style="@style/ButtonMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:padding="10dp"
                            android:text="Photos"
                            android:textAllCaps="false" />

                        <com.facebook.share.widget.ShareButton
                            android:id="@+id/share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </ScrollView>

</FrameLayout>