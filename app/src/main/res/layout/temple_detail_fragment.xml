<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.templedetail.TempleDetailFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:outlineAmbientShadowColor="@color/colorPrimaryDark"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_margin="5dp"
                >


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    android:layout_weight="7"
                    app:cardBackgroundColor="@color/text_Header"
                    android:outlineAmbientShadowColor="@color/colorPrimaryDark"
                    >

                    <ImageView
                        android:id="@+id/templeThumb"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_launcher_background"
                        android:tag="image_tag" />
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTempleName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="left"
                        android:text="Temple Name"
                        android:textColor="#FFFFFF"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="10"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            android:layout_weight="5"
                            >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                app:srcCompat="@drawable/ic_home_white_24dp"></ImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtLocation"
                                android:text="Location"
                                android:layout_marginStart="10dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="3"
                                android:textColor="@color/text_Header"

                                android:textAppearance="?android:attr/textAppearanceMedium"
                                ></TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="5"
                            >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                app:srcCompat="@drawable/ic_account_circle_white_24dp"></ImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtAddress"
                                android:text="Address"
                                android:layout_weight="3"
                                android:textColor="@color/text_Header"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="10dp"

                                android:textAppearance="?android:attr/textAppearanceMedium"
                                ></TextView>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="100">

                    <TextView
                        android:id="@+id/LblPrimaryDeity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:textColor="@color/text_Header"
                        android:text="Primary Deity :  "
                        android:layout_weight="60"
                        android:textAppearance="?android:attr/textAppearanceMedium" />



                    <TextView
                        android:id="@+id/txtPrimaryDeity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:textColor="@color/text_Header"
                        android:text="Primary Deity"
                        android:layout_weight="40"
                        android:textAppearance="?android:attr/textAppearanceMedium" />



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="100">

                    <TextView
                        android:id="@+id/lblGoverningBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:textColor="@color/text_Header"
                        android:text="Governing Body : "
                        android:layout_weight="60"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                    android:id="@+id/txtGoverningBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/text_Header"
                    android:text="Governing Body"
                        android:layout_weight="40"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>
                <TextView
                    android:id="@+id/lblContactPerson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/text_Header"
                    android:text="Contact Person : "
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/txtContactPerson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="1dp"
android:layout_marginStart="10dp"
                    android:textColor="@color/text_Header"
                    android:text="Contact Person - Number"
                    android:textAppearance="?android:attr/textAppearanceMedium" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="100">


                    <TextView
                        android:id="@+id/lblCreator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:textColor="@color/text_Header"
                        android:text="Creator"
                        android:layout_weight="60"
                        android:textAppearance="?android:attr/textAppearanceMedium" />


                    <TextView
                    android:id="@+id/txtCreator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/text_Header"
                    android:text="Creator"
                        android:layout_weight="40"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="100">

                    <TextView
                        android:id="@+id/lblCompletionPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="1dp"
                        android:textColor="@color/text_Header"
                        android:text="Completion Period"
                        android:layout_weight="60"
                        android:textAppearance="?android:attr/textAppearanceMedium" />


                    <TextView
                    android:id="@+id/txtCompletionPeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/text_Header"
                    android:text="Completion Period"
                        android:layout_weight="40"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>


                <TextView
                    android:id="@+id/txtWiki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/text_Header"
                    android:text="Wiki Link"
                    android:textAppearance="?android:attr/textAppearanceMedium" />





                <TextView
                    android:id="@+id/txtTempleStory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/text_Header"
                    android:text="Temple Story"
                    android:textAppearance="?android:attr/textAppearanceMedium" />





            </LinearLayout>



        </LinearLayout>



    </androidx.cardview.widget.CardView>


</FrameLayout>