<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/saint_layout"
    android:orientation="vertical">



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryDarkColor"
            android:outlineAmbientShadowColor="@color/primaryDarkColor"
            app:cardBackgroundColor="@color/primaryDarkColor"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="10"
                android:layout_margin="5dp"
                >

                <ImageView
                    android:id="@+id/saintThumb"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitCenter"

                    android:src="@drawable/omnitrail_home1"
                    android:tag="image_tag" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="0dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >


                        <TextView
                            android:id="@+id/txtSaintName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_large"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:text="Saint Name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:textColor="@color/grey_80"
                            app:fontFamily="sans-serif-medium"
                            app:layout_constraintBottom_toTopOf="@+id/rating"
                            app:layout_constraintStart_toStartOf="parent"
                            />


                        <TextView
                            android:id="@+id/txtSectName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_large"
                            android:text="Sect Name"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:textColor="@color/grey_60"
                            app:fontFamily="sans-serif-medium"
                            app:layout_constraintBottom_toTopOf="@+id/reviews1"
                            app:layout_constraintStart_toEndOf="@+id/image1"
                            app:layout_constraintTop_toTopOf="@+id/image1" />



                        <TextView
                            android:id="@+id/txtSaintDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_large"
                            android:text="Sect Name"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:textColor="@color/grey_60"
                            app:fontFamily="sans-serif-medium"
                            app:layout_constraintBottom_toTopOf="@+id/reviews1"
                            app:layout_constraintStart_toEndOf="@+id/image1"
                            app:layout_constraintTop_toTopOf="@+id/image1"
                            android:visibility="gone"
                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="10"
                            >

                            <TextView
                                android:id="@+id/txtSamudai"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_large"
                                android:text="Deity"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                                android:textColor="@color/grey_60"
                                app:fontFamily="sans-serif-medium"
                                app:layout_constraintBottom_toTopOf="@+id/reviews1"
                                app:layout_constraintStart_toEndOf="@+id/image1"
                                app:layout_constraintTop_toTopOf="@+id/image1"
                                android:layout_weight="5"
                                />



                            <Button
                                android:id="@+id/btnMore"
                                style="@style/Button.Accent.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:text="More ..."
                                android:layout_weight="5"
                                android:textColor="@color/primaryLightColor" />



                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>
