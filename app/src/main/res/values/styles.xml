<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>


    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AlertColor">FFFFFF</style>



    <style name="HeaderText">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="ImageCard">
        <item name="cardBackgroundColor">@color/primaryLightColor</item>
        <item name="android:outlineAmbientShadowColor">@color/primaryDarkColor</item>
        <item name="cardElevation">10dp</item>
<item name="cardCornerRadius">15dp</item>
    </style>

    <style name="NormalRatingBar">

            <item name="android:progressBackgroundTint">@color/primaryDarkColor</item>

            <item name="backgroundTint">@color/primaryTextColor</item>

        <item name="colorControlActivated">@color/primaryTextColor</item>
    </style>

    <style name="ButtonMain">
        <item name="backgroundTint">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="NormalText">

        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>

        <item name="android:textColor">@color/primaryTextColor  </item>
    </style>

    <style name="NormalLable">

        <item name="android:background">@color/primaryTextColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>

        <item name="android:textColor">@color/secondaryTextColor  </item>
    </style>


    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:toolbarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>


    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">20dp</item>
        <!-- Set title color -->
        <item name="android:textColor">@color/colorWhite</item>
    </style>


</resources>
